<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ID"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#9E9E9E"
        android:backgroundTint="#6200EE"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Скачать PDF"
        android:textColor="#FFFFFF"
        android:background="#6200EE"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Смотреть PDF"
        android:textColor="#FFFFFF"
        android:background="#03DAC5"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить PDF"
        android:textColor="#FFFFFF"
        android:background="#B00020"
        android:layout_marginBottom="12dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/load_data_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Данные о лабораторной"
            android:textColor="#FFFFFF"
            android:background="#3700B3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Замойский А.С."
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/load_data_button"
            android:layout_marginTop="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
