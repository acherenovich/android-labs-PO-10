<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/header_footer_color"
    android:padding="5dp">


    <TextView
        android:id="@+id/tvSelectedCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Выбрано: 0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnShowCart"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnShowCart"
        android:text="Корзина(нажимает Лущай А.О.)"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvSelectedCount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>