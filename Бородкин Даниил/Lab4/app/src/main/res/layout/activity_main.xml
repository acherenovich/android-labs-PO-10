<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ID"
        android:inputType="number" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Скачать PDF" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Смотреть PDF" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить PDF" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/load_data_button"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="94dp"
            android:text="Данные о лабораторной"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="202dp"
            android:layout_height="30dp"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="94dp"
            android:text="Бородкин Д.В. ПО-10"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/load_data_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
