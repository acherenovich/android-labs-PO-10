<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#571212"
    tools:context=".GestureActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дрыга Виктория"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нарисуйте жест и введите его название"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="8dp" />

    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gestureStrokeWidth="5"
        android:gestureColor="#FF4081" />

    <EditText
        android:id="@+id/gesture_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите имя жеста"
        android:inputType="text"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/save_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить жест (нажимает Дрыга В.С)"
        android:layout_marginTop="8dp" />

</LinearLayout>
