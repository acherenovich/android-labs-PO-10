<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Заголовок заметки -->
    <TextView
        android:id="@+id/number_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новая заметка"
        android:textSize="22sp"
        android:textColor="#222222"
        android:gravity="center"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Жестовая область -->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlay"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginBottom="20dp"
        android:eventsInterceptionEnabled="true"
        android:fadeEnabled="true"
        android:gestureColor="#6200EE"
        android:uncertainGestureColor="#888888"
        android:background="@android:color/white"
        android:padding="8dp" />

    <!-- Кнопки -->
    <Button
        android:id="@+id/add_word_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить слово"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:backgroundTint="#FF5722"
        android:paddingVertical="10dp"/>

    <Button
        android:id="@+id/new_note_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новая заметка"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF5722"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"/>

    <Button
        android:id="@+id/view_notes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Просмотр заметок"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF5722"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"/>

    <Button
        android:id="@+id/add_gesture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить жест"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF5722"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"/>

</LinearLayout>
