<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Карта -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Кнопки, размещенные снизу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:weightSum="2">

        <!-- Кнопка "Начать отслеживание" -->
        <Button
            android:id="@+id/startTrackingButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Начать отслеживание"
            android:background="#FF6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="8dp" />

        <!-- Кнопка "Остановить отслеживание" -->
        <Button
            android:id="@+id/stopTrackingButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Остановить отслеживание"
            android:background="#FF3700B3"
        android:textColor="#FFFFFF"
        android:layout_marginStart="8dp" />
    </LinearLayout>

</RelativeLayout>
