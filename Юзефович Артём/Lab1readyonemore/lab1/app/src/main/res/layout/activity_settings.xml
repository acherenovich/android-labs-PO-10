<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"> <!-- Белый фон -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server URL"
        android:textColor="@android:color/black"/> <!-- Черный текст -->

    <EditText
        android:id="@+id/serverUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter server URL"
        android:textColor="@android:color/black"
        android:textColorHint="#757575"/> <!-- Черный текст -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rows Count"
        android:textColor="@android:color/black"/> <!-- Черный текст -->

    <EditText
        android:id="@+id/rowsCountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter rows count"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHint="#757575"/> <!-- Черный текст -->

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Settings"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"/> <!-- Черный фон, белый текст -->
</LinearLayout>