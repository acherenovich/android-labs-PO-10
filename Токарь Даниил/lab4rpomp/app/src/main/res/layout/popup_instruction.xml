<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:textColor="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инструкция по использованию приложения:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Это всплывающее окно с инструкцией. Для использования приложения выберите желаемый вариант взаимодействия."
        android:layout_marginBottom="16dp"
        android:textColor="#000000"/>

    <CheckBox
        android:id="@+id/checkBoxDontShowAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Больше не показывать"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="end"/>

</LinearLayout>