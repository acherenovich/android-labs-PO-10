<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BA4BA"
    android:orientation="vertical"
    tools:context=".AudioActivity">

    <Button
        android:id="@+id/chooseAudioBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="#F4F4F4"
        android:text="Choose Audio"
        android:textColor="#FFFFFF" />

    <SeekBar
        android:id="@+id/audioScrolling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/videoResumePauseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F4F4"
            android:text="Pause"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/videoStopBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F4F4"
            android:text="Stop"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkboxLoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Audio (Shymanouski)"
        android:textColor="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
        android:text="Back (Shymanouski)"
        android:textColor="#FFFFFF" />

</LinearLayout>
