<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ADD8E6"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shymanouski"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="8dp" />

    <Button
        android:id="@+id/toggle_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode: Gestures"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4682B4"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/number_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="16dp" />

    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlay"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gestureStrokeWidth="7"
        android:gestureColor="#4682B4"
        android:eventsInterceptionEnabled="true"
        android:fadeEnabled="false"/>

    <Button
        android:id="@+id/clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear input (Shymanouski)"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1E90FF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/add_gesture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add gesture (Shymanouski)"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1E90FF"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:layout_gravity="center"/>

</LinearLayout>
